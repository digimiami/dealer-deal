# Database Configuration
# Option 1: Use connection string (RECOMMENDED for Neon, Supabase, Prisma Postgres)
# Get this from your Vercel database dashboard after creating Neon/Supabase
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# Option 2: Use individual variables (alternative)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dealer_leads
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# OpenClaw Configuration (optional, for AI features)
OPENCLAW_GATEWAY_URL=http://localhost:18789
OPENCLAW_TOKEN=your_openclaw_token_here
OPENCLAW_WEBHOOK_TOKEN=your_webhook_secret_here

# Email/SMTP Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Twilio Configuration (optional, for SMS/Phone)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Application
NODE_ENV=development
PORT=3000
